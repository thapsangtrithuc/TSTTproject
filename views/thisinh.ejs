        }
        #input-answer {
            width: 90%;
            height: 60px;
            font-size: 3.5em;
        }

        #button-submit {
            height: 60px;
            width: 9%;
            padding: 0;
            margin: 2px;
            vertical-align: top;
            background-color: #0693cd;
            border: 0;
            border-radius: 5px;
            cursor: pointer;
            color: #fff;
            font-size: 16px;
            font-weight: bold;
            line-height: 1.4;
            padding: 10px;
        }

        #container-2 {
            width: 25%;
            height: 90vh;
            box-sizing: border-box;
            display: inline-block;
            vertical-align: top;
            margin-left: 20px;
        }

    </style>
</head>

<body>
    <div id="container-1">
        <div id="content">

        </div>
        <form id="form-answer" action="">
            <input type="text" id="input-answer" name="input-answer" />
            <button type="button" id="button-submit" value="Submit" onclick="">Submit</button>
        </form>
    </div>

    <div id="container-2">
        <button onclick="dangxuat()"> Đăng xuất</button>
        <%- include("partial/point", {user: user}) %>
